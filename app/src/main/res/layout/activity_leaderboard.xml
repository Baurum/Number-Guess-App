<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bau.com.numberguess.LeaderboardActivity"
    android:orientation="vertical">

    <TextView android:id="@+id/tv_leaderboard_top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:paddingTop="10dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        />

    <TextView android:id="@+id/tv_leaderboard_top2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/tv_leaderboard_top3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/tv_leaderboard_top4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="10sp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/tv_leaderboard_top5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="10sp"
        android:textStyle="bold"
        />

</LinearLayout>
